<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rgCategory"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/layoutTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RadioButton
            android:id="@+id/rbEarn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수입"
            android:gravity="center"
            android:textColor="@color/earn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/rbSave"
            />
        <RadioButton
            android:id="@+id/rbSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저축"
            android:gravity="center"
            android:textColor="@color/save"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/rbEarn"
            app:layout_constraintRight_toLeftOf="@+id/rbSpend"
            />
        <RadioButton
            android:id="@+id/rbSpend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소비"
            android:gravity="center"
            android:textColor="@color/spend"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/rbSave"
            app:layout_constraintRight_toLeftOf="@+id/rbBalance"
            />
        <RadioButton
            android:id="@+id/rbBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잔액"
            android:gravity="center"
            android:textColor="@color/blackGray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/rbSpend"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layoutTitle"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgCategory"
        app:layout_constraintBottom_toTopOf="@+id/datePickLayout"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="제목"
            android:autoSizeTextType="uniform"/>
        <EditText
            android:id="@+id/etTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:backgroundTint="@color/gray"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/datePickLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.9"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/etAmount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutTitle">
        <LinearLayout
            android:id="@+id/startYearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <EditText
                android:id="@+id/startYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="1990"
                android:inputType="number"
                android:maxLength="4"
                android:nextFocusDown="@id/startMonth"
                />
            <TextView
                android:id="@+id/tvSYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="년"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/startMonthLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/startYearLayout"
            app:layout_constraintRight_toLeftOf="@+id/startDayLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <EditText
                android:id="@+id/startMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="01"
                android:inputType="number"
                android:maxLength="2"
                android:nextFocusDown="@id/startDay"
                />
            <TextView
                android:id="@+id/tvSMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/startDayLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/startMonthLayout"
            app:layout_constraintRight_toLeftOf="@+id/tvWave"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <EditText
                android:id="@+id/startDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="01"
                android:inputType="number"
                android:maxLength="2"
                android:nextFocusDown="@id/endYear"
                />
            <TextView
                android:id="@+id/tvSDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvWave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <LinearLayout
            android:id="@+id/endYearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tvWave"
            app:layout_constraintRight_toLeftOf="@+id/endMonthLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <EditText
                android:id="@+id/endYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="1990"
                android:inputType="number"
                android:maxLength="4"
                android:nextFocusDown="@id/endMonth"
                />
            <TextView
                android:id="@+id/tvEYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="년"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/endMonthLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/endYearLayout"
            app:layout_constraintRight_toLeftOf="@+id/endDayLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <EditText
                android:id="@+id/endMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="01"
                android:inputType="number"
                android:maxLength="2"
                android:nextFocusDown="@id/endDay"
                />
            <TextView
                android:id="@+id/tvEMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/endDayLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <EditText
                android:id="@+id/endDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="01"
                android:inputType="number"
                android:maxLength="2"
                />
            <TextView
                android:id="@+id/tvEDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray"
        android:hint="금액"
        android:inputType="number"
        android:maxLength="20"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/etExplain"
        app:layout_constraintLeft_toLeftOf="@+id/layoutTitle"
        app:layout_constraintRight_toRightOf="@+id/layoutTitle"
        app:layout_constraintTop_toBottomOf="@+id/datePickLayout" />

    <EditText
        android:id="@+id/etExplain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray"
        android:hint="내용"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
        app:layout_constraintLeft_toLeftOf="@+id/etAmount"
        app:layout_constraintRight_toRightOf="@+id/etAmount"
        app:layout_constraintTop_toBottomOf="@+id/etAmount" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/etExplain"
        app:layout_constraintRight_toRightOf="@+id/etExplain"
        app:layout_constraintTop_toBottomOf="@+id/etExplain">

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="확인"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="취소"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>